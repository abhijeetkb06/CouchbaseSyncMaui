<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:AppSync.Views"
             x:Class="AppSync.Views.ProfilesPage"
             Title="Profiles">
    <CollectionView ItemsSource="{Binding Profiles}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                    <Label Text="{Binding Title}" FontSize="14"/>
                    <Label Text="{Binding Email}" FontSize="14"/>

                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                        <Button Text="Edit" Command="{Binding Source={RelativeSource AncestorType={x:Type views:ProfilesPage}}, Path=BindingContext.EditCommand}" CommandParameter="{Binding}" />
                        <Button Text="Delete" Command="{Binding Source={RelativeSource AncestorType={x:Type views:ProfilesPage}}, Path=BindingContext.DeleteCommand}" CommandParameter="{Binding}" />
                    </StackLayout>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
